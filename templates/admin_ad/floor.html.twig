{% extends "base.html.twig" %}

{% block title %}
	Saisissez des informations sur le logement
{% endblock %}

{% block body %}
	<div class="admin-ad-create">
		{{ form_start(form, {'attr': {'class': 'w-100'}}) }}
		<div class="floor-plan-container">
			<div class="mt-auto mb-auto">
				<div class="floor-plan-wrapper">
					<div class="floor-plan-content">
						<div class="floor-content-title">
							<h1 class="floor-title">Commen√ßons par l'essentiel</h1>
							<div class="floor-subtitle">Vous pourrez ajouter d'autres informations plus tard, comme les types de lit.</div>
						</div>
						<div class="floor-content-form">
							<div class="floor-content-input">
								<div class="floor-wrapper-input">
									{{ form_errors(form.rooms) }}
									<div class="floor-tag-input">
										<div class="floor-tag-title">
											<div class="floor-label">
												Chambres
											</div>
										</div>
										<div class="d-flex">
											<div class="stepper-item">
												<button type="button" id="decrement_rooms" class="btn-stepper" onclick="decrement('rooms')">
													<span class="btn-stepper-svg">
														<svg viewbox="0 0 12 12" xmlns="http://www.w3.org/2000/svg" style="display:block;height:12px;width:12px;fill:currentColor" aria-hidden="true" role="presentation" focusable="false">
															<path d="m.75 6.75h10.5v-1.5h-10.5z"></path>
														</svg>
													</span>
												</button>
												{{ form_widget(form.rooms) }}
												<button type="button" class="btn-stepper" onclick="increment('rooms')">
													<span class="btn-stepper-svg">
														<svg viewbox="0 0 12 12" xmlns="http://www.w3.org/2000/svg" style="display:block;height:12px;width:12px;fill:currentColor" aria-hidden="true" role="presentation" focusable="false">
															<path d="m6.75.75v4.5h4.5v1.5h-4.5v4.5h-1.5v-4.5h-4.5v-1.5h4.5v-4.5z"></path>
														</svg>
													</span>
												</button>
											</div>
										</div>
									</div>
								</div>
							</div>
							<div class="floor-content-input">
								<div class="floor-wrapper-input">
									{{ form_errors(form.beds) }}
									<div class="floor-tag-input">
										<div class="floor-tag-title">
											<div class="floor-label">
												Lits
											</div>
										</div>
										<div class="d-flex">
											<div class="stepper-item">
												<button type="button" id="decrement_beds" class="btn-stepper" onclick="decrement('beds')">
													<span class="btn-stepper-svg">
														<svg viewbox="0 0 12 12" xmlns="http://www.w3.org/2000/svg" style="display:block;height:12px;width:12px;fill:currentColor" aria-hidden="true" role="presentation" focusable="false">
															<path d="m.75 6.75h10.5v-1.5h-10.5z"></path>
														</svg>
													</span>
												</button>
												{{ form_widget(form.beds) }}
												<button type="button" class="btn-stepper" onclick="increment('beds')">
													<span class="btn-stepper-svg">
														<svg viewbox="0 0 12 12" xmlns="http://www.w3.org/2000/svg" style="display:block;height:12px;width:12px;fill:currentColor" aria-hidden="true" role="presentation" focusable="false">
															<path d="m6.75.75v4.5h4.5v1.5h-4.5v4.5h-1.5v-4.5h-4.5v-1.5h4.5v-4.5z"></path>
														</svg>
													</span>
												</button>
											</div>
										</div>
									</div>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>
		</div>
			{{ include('partials/_bottom_admin_ad_next.html.twig', { 'progress': 16.67 }) }}
		{{ form_end(form) }}
	</div>
{% endblock %}

{% block javascripts %}
	{{ parent() }}
	<script>
		document.addEventListener('DOMContentLoaded', function () {
updateButtonState('rooms');
updateButtonState('beds');
});
function increment(field) {
var input = document.getElementById('ad_step1_form_' + field);
input.value = parseInt(input.value) + 1;
updateButtonState(field);
}

function decrement(field) {
var input = document.getElementById('ad_step1_form_' + field);
if (input.value > 0) {
input.value = parseInt(input.value) - 1;
updateButtonState(field);
}
}

function updateButtonState(field) {
var input = document.getElementById('ad_step1_form_' + field);
var decrementButton = document.getElementById('decrement_' + field);
if (parseInt(input.value) <= 1) {
decrementButton.disabled = true;
} else {
decrementButton.disabled = false;
}
}
	</script>
{% endblock %}
